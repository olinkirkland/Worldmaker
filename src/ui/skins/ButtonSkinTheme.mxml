<?xml version="1.0" encoding="utf-8"?>

<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:ui="ui.components.*"
                   creationComplete="onCreationComplete(event)"
                   autoIconManagement="false">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <fx:Script><![CDATA[
        import global.Color;

        import mx.events.FlexEvent;

        private function onCreationComplete(event:FlexEvent):void
        {
            if (Label(labelDisplay).text.length == 0)
                Label(labelDisplay).includeInLayout = false;
        }
        ]]></fx:Script>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="up"/>
    </s:states>

    <s:Group>

        <s:Rect id="rect"
                width="100%"
                height="100%"
                radiusX="{height/2}"
                radiusY="{height/2}">
            <s:fill>
                <s:SolidColor color="{Color.themePrimary}"
                              alpha.normal="1"
                              alpha.disabled=".5"/>
            </s:fill>
        </s:Rect>

        <s:Rect width="100%"
                height="100%"
                radiusX="{height/2}"
                radiusY="{height/2}">
            <s:fill>
                <s:SolidColor color="{Color.white}"
                              alpha="0"
                              alpha.over=".1"
                              alpha.disabled="0"/>
            </s:fill>
        </s:Rect>

        <s:HGroup padding="7"
                  paddingLeft="15"
                  paddingRight="15"
                  verticalAlign="middle"
                  gap="7">

            <ui:ColorBitmapImage id="iconDisplay"
                                 includeInLayout="{iconDisplay.source}"
                                 color="0x202427"
                                 width="16"
                                 height="16"
                                 smooth="true"
                                 alpha.normal="1"
                                 alpha.disabled=".5"/>

            <s:Label id="labelDisplay"
                     styleName="button"
                     height="16"
                     verticalAlign="middle"
                     color="0x202427"
                     alpha.normal="1"
                     alpha.disabled=".5"/>

        </s:HGroup>

    </s:Group>

</s:SparkButtonSkin>