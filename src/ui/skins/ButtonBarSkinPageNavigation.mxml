<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        alpha.disabled="0.5">

    <fx:Metadata>
    <![CDATA[
        [HostComponent("spark.components.ButtonBar")]
        ]]>
    </fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>

    <fx:Declarations>
        <fx:Component id="firstButton">
            <s:ButtonBarButton skinClass="ui.skins.ButtonBarButtonSkinPageNavigation"/>
        </fx:Component>

        <fx:Component id="middleButton">
            <s:ButtonBarButton skinClass="ui.skins.ButtonBarButtonSkinPageNavigation"/>
        </fx:Component>

        <fx:Component id="lastButton">
            <s:ButtonBarButton skinClass="ui.skins.ButtonBarButtonSkinPageNavigation"/>
        </fx:Component>

    </fx:Declarations>

    <s:DataGroup id="dataGroup"
                 width="100%"
                 height="100%">
        <s:layout>
            <s:ButtonBarHorizontalLayout gap="15"/>
        </s:layout>
    </s:DataGroup>

    <fx:Script><![CDATA[
        ]]></fx:Script>
</s:Skin>
