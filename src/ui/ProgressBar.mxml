<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         width="100%"
         height="13">

    <fx:Script>
        <![CDATA[
        import com.greensock.TweenLite;

        import global.Color;

        import mx.events.FlexEvent;

        public function moveTo(percent:Number):void
        {
            TweenLite.killTweensOf(rectBar);
            rectBar.percentWidth = percent;
        }

        public function reset():void
        {
            moveTo(0.05);
        }

        public function animateTo(percent:Number):void
        {
            // Percent is a Number between 0 and 1
            TweenLite.to(rectBar, 1, {percentWidth: percent * 100});
        }
        ]]>
    </fx:Script>

    <!--Track-->
    <s:Rect width="100%"
            height="100%"
            radiusX="{height/2}"
            radiusY="{height/2}">
        <!--        <s:fill>-->
        <!--            <s:SolidColor color="{Color.fillLow}"/>-->
        <!--        </s:fill>-->
        <s:stroke>
            <s:SolidColorStroke color="{Color.themePrimary}"/>
        </s:stroke>
    </s:Rect>

    <s:HGroup width="100%"
              height="100%"
              padding="4">
        <!--Bar-->
        <s:Rect id="rectBar"
                width="0%"
                height="100%"
                radiusX="{rectBar.height/2}"
                radiusY="{rectBar.height/2}">
            <s:fill>
                <s:SolidColor color="{Color.themePrimary}"/>
            </s:fill>
        </s:Rect>
    </s:HGroup>

</s:Group>