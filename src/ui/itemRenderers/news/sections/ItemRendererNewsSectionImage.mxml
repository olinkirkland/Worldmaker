<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                width="100%"
                autoDrawBackground="false">
    <fx:Script><![CDATA[
        import data.NewsSectionData;

        import global.Color;

        private var section:NewsSectionData;

        override public function set data(value:Object):void
        {
            if (!value)
                return;

            section = NewsSectionData(value);
            bitmapImage.source = section.url;
            labelCaption.text = section.text;
        }
        ]]>
    </fx:Script>

    <s:VGroup width="100%"
              paddingLeft="10"
              paddingRight="10">

        <s:HGroup padding="10"
                  width="100%"
                  verticalAlign="middle">

            <s:BitmapImage id="bitmapImage"
                           width="100%"/>

            <s:Label id="labelCaption"
                     textAlign="center"
                     color="{Color.textLow}"
                     width="100%"/>

        </s:HGroup>

    </s:VGroup>

</s:ItemRenderer>
